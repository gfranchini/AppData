<p id="notice"><%= notice %></p>

<h1>Load Balancers</h1>

<table>
  <thead>
    <tr>
      <th>Ip</th>
      <th>Brand</th>
      <th>Applicability</th>
      <th>Environment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @load_balancers.each do |load_balancer| %>
      <tr>
        <td><%= load_balancer.ip %></td>
        <td><%= load_balancer.brand %></td>
        <td><%= load_balancer.applicability %></td>
        <td><%= load_balancer.environment %></td>
        <td><%= link_to 'Show', load_balancer %></td>
        <td><%= link_to 'Edit', edit_load_balancer_path(load_balancer) %></td>
        <td><%= link_to 'Destroy', load_balancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

