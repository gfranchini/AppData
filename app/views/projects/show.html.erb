<p id="notice"><%= notice %></p>

<h1>Project Information</h1>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<h1>Environments for this project.</h1>

<% @environments.each do |x| %>
  <p>
    - <%= link_to "#{x.name}", project_environment_path( @project, x.id ) %>
  </p>
<% end%>

<p>
	<%= link_to 'Add an environment to this project', new_project_environment_path(@project), class: 'btn btn-primary' %>
</p>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
